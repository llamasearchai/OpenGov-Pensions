###############################################################################
# OpenPension Environment Configuration Example
# Copy this file to `.env` and adjust values for your environment.
###############################################################################

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=OpenPension
APP_VERSION=1.0.0
ENVIRONMENT=local
DEBUG=true

# -----------------------------------------------------------------------------
# Database (SQLite async by default)
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite+aiosqlite:///./data/opengovpension.db
# Example Postgres URL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/opengovpension
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# -----------------------------------------------------------------------------
# Redis / Caching
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TTL=60

# -----------------------------------------------------------------------------
# Celery Task Queue
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SOFT_TIME_LIMIT=30
CELERY_TASK_HARD_TIME_LIMIT=60

# -----------------------------------------------------------------------------
# Authentication / Security
# -----------------------------------------------------------------------------
JWT_SECRET=change_me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=43200
PASSWORD_HASH_ROUNDS=12
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=120
CORS_ALLOW_ORIGINS=*

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
TRACING_ENABLED=false
OTLP_ENDPOINT=http://localhost:4318
PROMETHEUS_ENABLED=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_WEBSOCKETS=true
ENABLE_AUDIT_LOG=true

# -----------------------------------------------------------------------------
# AI / LLM Providers
# -----------------------------------------------------------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b

###############################################################################
# Backward Compatibility (legacy variable names) - optional
# Uncomment only if older scripts rely on these.
# OPENPENSION_DATABASE_URL=${DATABASE_URL}
# OPENPENSION_DEBUG=${DEBUG}
# OPENPENSION_LOG_LEVEL=${LOG_LEVEL}
# OPENPENSION_OPENAI_MODEL=${OPENAI_MODEL}
# OPENPENSION_OLLAMA_BASE_URL=${OLLAMA_BASE_URL}
# OPENPENSION_OLLAMA_MODEL=${OLLAMA_MODEL}
###############################################################################
